@model IEnumerable<VirtualGameStore.Models.Wishlist>

@{
    ViewData["Title"] = "Wish List";
}

<h2>@ViewBag.Users Wish List</h2>

@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.Price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td>User Hasn't added anything to their wish list</td>
            </tr>
        </tbody>
    </table>
}

<div>
    <a asp-action="Index" id="back" asp-controller="Friends">Back to Friends</a>
</div>
