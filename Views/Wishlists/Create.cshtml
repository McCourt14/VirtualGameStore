@model VirtualGameStore.Models.Wishlist

@{
    ViewData["Title"] = "Add new Wish Game";
}

<h2>Add new Wish Game</h2>

<h4>Wish Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Userid" type="hidden" value="@ViewData["UserId"]" />
            <div class="form-group">
                <label asp-for="Gameid" class="control-label"></label>
                <select asp-for="Gameid" class="form-control" asp-items="ViewBag.Gameid"></select>
            </div>
            <div class="form-group">
                <input type="submit" id="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
