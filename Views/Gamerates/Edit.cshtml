@model VirtualGameStore.Models.Gamerates

@{
    ViewData["Title"] = "Edit Game Rates";
}

<h2>Edit Game Rates</h2>

<h4>Gamerates</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rateid" />
            <input type="hidden" asp-for="Userid" />
            <input type="hidden" asp-for="Gameid" />
            <div class="form-group">
                <label asp-for="Rates" class="control-label"></label>
                <input asp-for="Rates" class="form-control" />
                <span asp-validation-for="Rates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.Gameid">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
