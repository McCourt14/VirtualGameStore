@model IEnumerable<VirtualGameStore.Models.Gamerates>

@{
    ViewData["Title"] = "Game Rates";
}

<h2>Pending Game Ratings</h2>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rates)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rates)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Approve" asp-route-id="@item.Rateid">Approve</a> |
                        <a asp-action="RemovePending" asp-route-id="@item.Rateid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td>No Pending Reviews</td>
            </tr>
        </tbody>
    </table>
}

